{
    "singleQuote": true,
    "printWidth": 120,
    "requireConfig": false,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true,
    "tabWidth": 4,
    "editor.formatOnSave": true,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        }
    ],
    "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"]
}
